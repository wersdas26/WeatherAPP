<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.eahjena.wi.mae.weatherapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fuel_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fuel_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherAPP">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecyclerViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.RECYCLERVIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DETAILVIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>